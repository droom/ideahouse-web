- var authorised = true
- var page = 'email'

doctype html
html(lang="en")
  head
    style.
      body{
        background: #ccc;
        margin: auto;
        padding: 30px 0;
        font-family: helvetica, arial;
        font-size: 14px;
      }
      table.email{
        margin: 0 auto;
        width: 100%;
        max-width: 600px;
        text-align: center;
      }

      table.email thead{
        background: white;
      }

      table.email tbody{
        background: #f4f4f4;
      }
      table.email tfoot{
        background: #f9f9f9;
      }

      table.details{
        margin: auto;
        padding: 20px;
      }

      table.details td{
        font-size: 12px;
        background: white;
      }

      table.details tr:first-child td{
        padding-bottom: 0;
      }


      table.details td.label{
        text-align: right;
        padding-right: 0;
      }
      table.details td.report{
        text-align: left
      }


      table.access td{
        font-size: 12px;
      }

      table.access thead{
        background: none;
      }

      table.access thead tr td{
        padding-top: 0;
      }
      table.access tbody tr:first-child td{
        padding-bottom: 0;
      }

      table.access tbody tr:first-child td {
        padding-bottom: 0;
        vertical-align: bottom;
      }

      table.access td.feature{
        width: 33%;
        vertical-align: top; 
      }

      td.feature.img {
        max-width: 109px;
        padding-top: 0;
        padding-bottom: 0;

      }

      td.feature.img img{
        width: 100%
      }

      table{
        border-collapse: collapse;
      }

      table td{
        padding: 15px;
        margin: 0;
      }

      table td.feature {
        padding: 10px 5px;
      }

      td.bold{
        font-weight: bold;
      }
      
      td.brand img{
        padding: 10px 0
      }

      td.cta{
        padding-top: 20px;
      }

      td.cta a{
        background: #60af74;
        color: white;
        padding: 20px;
        border-radius: 3px;
        text-decoration: none;
      }

      td.cta a:hover{
        background: #498B5A;
      }


  body
