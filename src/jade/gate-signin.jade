- var authorised = false
- var page = 'gate'

doctype html
html(lang="en")
  title = "$PAGE_TITLE"
  include partials/_head
  body(class = page)
    include partials/_nav
    .wrap
      include partials/_col-main-left
      .col-main-right(role="main")

        .ui.huge.breadcrumb
          .section Welcome to Ideahouse

        .ui.info.message
          i.close.icon
          .header Don't have an Ideahouse account? Register an account now for free.
          a(href="gate-register-1.html").ui.button Register

        .ui.info.message
          .header
            | You've sucessfully changed your password. Please sign in using your new credentials.

        .content
          label.input Login
          .ui.big.input
            input(type="email", placeholder="Email / Login ID")
          label.input Password
          .ui.big.input
            input(type="password", placeholder="Password")

          a(href="gate-reset-send.html").forgot I've forgotten my password

          hr

          div.ui.checkbox
            input(type="checkbox" name="remember")
            label Remember me

          hr

          a(href="index.html").ui.large.cta.button Sign in

      include partials/_footer
      include partials/_scripts
