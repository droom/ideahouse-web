- var authorised = true
- var page = 'offer'

doctype html
html(lang="en")
  title = "$PAGE_TITLE"
  include partials/_head
  body(class = page)
    include partials/_nav
    .wrap
      include partials/_col-main-left
      .col-main-right(role="main")
        .ui.huge.breadcrumb
          .section Offer items

        .tiles
          .ui.card.offer
            .image
              img.product(alt="" src="img/product/2106.jpg")
            .content
              .description Admiral - Push Action Ball Plastic Pen (Black Ink)
            .extra.content
              small 2106
          .ui.card.offer
            .image
              img.product(alt="" src="img/product/2109.jpg")
            .content
              .description Swan - Twist Action Ball Plastic Pen (Black Ink
            .extra.content
              small 2106
          .ui.card.offer
            .image
              img.product(alt="" src="img/product/2111.jpg")
            .content
              .description Galaxy - Push Action Ball Plastic Pen (Black Ink)
            .extra.content
              small 2111

        .boundary.fetch.center
          button.ui.cta.button.load(id="load-more") View more
